#define INN_PATH_OLDACTIVE         "active.old"
#define INN_PATH_ACTIVETIMES       "active.times"
#define INN_PATH_NEWSGROUPS        "newsgroups"

/* Default prefix path is pathetc. */
#define INN_PATH_NEWSFEEDS         "newsfeeds"
